{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid-y">
        <div class="cell">
            <h2>Get Organized</h2>
        </div>
        <div class="grid-x grid-margin-x cell">
            <div class="cell medium-6">
                <h3>Active Tasks</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Priority</th>
                            <th>Deadline</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for task in tasks %}
                            <tr>
                                <td><a href="{{ path("task_show", { id: task.id }) }}">{{ task.name }}</a></td>
                                <td>{{ task.priority }}</td>
                                <td>{{ task.deadline | date("m/d/Y") }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="cell medium-6">
                <h3>Add a New Task</h3>
                {{ form_start(taskForm) }}
                    {{ form_widget(taskForm) }}
                    <input class="button" type="submit" value="Create" />
                {{ form_end(taskForm) }}
            </div>
        </div>
        <div class="cell">
            <h3>Schedule</h3>
            {# Calendar #}
        </div>
    </div>
{% endblock %}
